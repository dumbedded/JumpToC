{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build task.c",
            "type": "shell",
            "command": "clang",
            "args": [
                "task.c",
                "-o",
                "task",
                "-Wall",
                "-Wextra",
                "-std=c11"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
